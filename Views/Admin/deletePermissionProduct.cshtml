@model Product
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">
        Bạn có chắc chắn muốn xóa sản phẩm này không?
    </h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ul class="list-group mb-4">
            <li class="list-group-item">Product Id: @Model.product_id</li>
            <li class="list-group-item">Product Name: @Model.product_name</li>
        </ul>
        <div class="text-center">
            <a href="@Url.Action("deleteProduct", "Admin", new{id=Model.product_id})" class="btn btn-danger me-2">
                Delete Product
            </a>
            <a href="@Url.Action("fetchProduct", "Admin")" class="btn btn-warning">
                Back to List
            </a>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

