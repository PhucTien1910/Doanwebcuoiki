@model Category
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">
        Bạn có chắc chắn muốn xóa danh mục này không?
    </h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <ul class="list-group mb-4">
            <li class="list-group-item">Category Id: @Model.category_id</li>
            <li class="list-group-item">Category Name: @Model.category_name</li>
        </ul>
        <div class="text-center">
            <a href="@Url.Action("deleteCategory", "Admin", new{id=Model.category_id})" class="btn btn-danger me-2">
                Delete Category
            </a>
            <a href="@Url.Action("fetchCategory", "Admin")" class="btn btn-warning">
                Back to List
            </a>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
