<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Add New Product</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <input type="text" name="product_name" placeholder="Enter Product Name" class="form-control my-2" />
            <input type="number" name="product_price" placeholder="Enter Product Price" class="form-control my-2" />
            <input type="text" name="product_description" placeholder="Enter Product Description" class="form-control my-2" />
            <input type="file" name="product_image" class="form-control my-2" />



            <input type="number" name="product_discount_price" placeholder="Discount Price (optional)" class="form-control my-2" />
            <input type="number" step="0.1" name="product_rating" placeholder="Rating (0 - 5)" class="form-control my-2" />
            <input type="number" name="product_review_count" placeholder="Review Count" class="form-control my-2" />
            <input type="number" name="product_sold" placeholder="Sold Quantity" class="form-control my-2" />
            @Html.Partial("CategoryDropdown", ViewData["category"])
            <input type="submit" value="Add Product" class="form-control my-3 btn btn-primary" />
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
