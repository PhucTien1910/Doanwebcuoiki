@model Tuple<string, List<Doanwebcuoiki.Models.Product>>
@{
    Layout = "_Layout";
    var categoryName = Model.Item1;
    var products = Model.Item2;
}

<section class="mt-4">
    <div class="container">
        <h4 class="fw-bold text-success mb-4 d-flex justify-content-between align-items-center">
            <span><i class="fas fa-boxes me-2"></i> @categoryName</span>
            <a href="/" class="text-decoration-none">← Quay lại</a>
        </h4>

        <div class="row g-4">
            @foreach (var product in products)
            {
                @Html.Partial("_ProductCard", product)
            }
        </div>
    </div>
</section>

